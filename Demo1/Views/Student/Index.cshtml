@model List<Student>
@{
    ViewData["Title"] = "List Student";
}

<h2>@ViewData["Title"]</h2>
<div class="alert-success">@TempData["message"]</div>
<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            <span>@Model[i].Name - @Model[i].RollNumber </span>
            <span>
                <a href="/Student/Edit?id=@Model[i].Id">Edit</a>
                <a class="btnDelete" id="@Model[i].Id">Delete</a>
            </span>
        </li>
    }
