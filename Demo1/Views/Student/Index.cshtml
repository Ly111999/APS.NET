@model List<Student>
@{
    ViewData["Title"] = "List Student";
}

<h2>@ViewData["Title"]</h2>
<div class="alert-success">@TempData["message"]</div>
<ul>
    @foreach (var student in Model)
    {
        <li>
            <span>@student.Name - @student.RollNumber </span>
            <span>
                <a href="/Student/Edit?id=@student.Id">Edit</a>
                <a class="btnDelete" id="@student.Id">Delete</a>
            </span>
        </li>
    }
</ul>

